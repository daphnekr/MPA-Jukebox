@model IEnumerable<JukeBox1.Models.Genres>

@{
    ViewBag.Title = "Genres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Genres</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                <p><a class="btn btn-default" href="@Url.Action("SongsByGenre", "Songs", new { id = item.Id })">Liedjes van deze genre &raquo;</a></p>
            </td>
        </tr>
    }


</table>
