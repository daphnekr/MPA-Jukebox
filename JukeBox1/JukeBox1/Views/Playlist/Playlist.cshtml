@model JukeBox1.Models.MultipleModels

@{
    ViewBag.Title = "Playlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Afspeellijst</h2>
<p>Duur playlist: @Html.DisplayFor(m => m.PlaylistDuration) minuten</p>
<table class="table">
    <tr>
        <th>
            Naam
        </th>
        <th>
            Artiest
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model.Songs)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SongName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.ActionLink("Verwijder", "DeleteSongFromPlaylist", new { id = item.Id }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
            </td>
        </tr>
    }

</table>
@using (Html.BeginForm("SavePlaylist", "Playlist", FormMethod.Post))
{
    @Html.Label("Playlist naam", new { @class = "col-md-2 control-label" })

    @Html.TextBox("playlistname") <br /><br>
    <input class="btn btn-primary" value="Playlist opslaan" type="submit">
}
